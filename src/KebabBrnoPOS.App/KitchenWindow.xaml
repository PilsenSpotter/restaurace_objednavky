<Window x:Class="KebabBrnoPOS.App.KitchenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KebabBrnoPOS.App"
        mc:Ignorable="d"
        Title="Kuchynsky displej"
        Height="700"
        Width="1100"
        Background="#0f172a"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <local:OrderItemSummaryConverter x:Key="OrderItemSummaryConverter" />
    </Window.Resources>
    <Grid Background="#0f172a">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Background="#111827" Padding="12" BorderBrush="#1f2937" BorderThickness="0 0 0 1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Kuchynsky displej" Foreground="White" FontSize="20" FontWeight="SemiBold" />
                <TextBlock Text="Objednavky v kuchyni"
                           Foreground="#9ca3af"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0" />
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="12">
            <StackPanel>
                <TextBlock Text="V kuchyni" Foreground="White" FontSize="16" FontWeight="SemiBold" />
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,6,0,0">
                    <ItemsControl ItemsSource="{Binding PendingOrders}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0 0 0 10" Padding="12" Background="#111827" CornerRadius="8" BorderBrush="#1f2937" BorderThickness="1">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding DisplayCode}" Foreground="White" FontSize="16" FontWeight="Bold" />
                                            <TextBlock Text="{Binding CreatedAt, StringFormat={}{0:HH:mm}}" Foreground="#9ca3af" Margin="10,0,0,0" />
                                            <TextBlock Text="{Binding Status}" Foreground="#f59e0b" FontWeight="SemiBold" Margin="10,0,0,0" />
                                        </StackPanel>
                                        <ItemsControl ItemsSource="{Binding Items}" Margin="0,6,0,0">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Margin="0,4,0,0">
                                                        <TextBlock Text="{Binding Path=., Converter={StaticResource OrderItemSummaryConverter}}"
                                                                   Foreground="#e5e7eb">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="TextDecorations" Value="{x:Null}" />
                                                                    <Setter Property="Foreground" Value="#e5e7eb" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsFullyDoneKitchen}" Value="True">
                                                                            <Setter Property="TextDecorations" Value="Strikethrough" />
                                                                            <Setter Property="Foreground" Value="#6b7280" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                        <ItemsControl ItemsSource="{Binding PortionStatesKitchen}" Margin="0,4,0,0">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <WrapPanel />
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <CheckBox IsChecked="{Binding IsDone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                              Padding="4,2"
                                                                              Margin="0,2,6,2"
                                                                              Background="White"
                                                                              Foreground="#111827"
                                                                              BorderBrush="#cbd5e1"
                                                                              Focusable="False" />
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        <Button Content="Na vydej" Tag="{Binding}" Click="MarkReady_Click"
                                                Padding="10,6"
                                                Background="#22c55e"
                                                Foreground="White"
                                                BorderBrush="#16a34a"
                                                Margin="0,10,0,0" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
