<Window x:Class="KebabBrnoPOS.App.PickupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KebabBrnoPOS.App"
        mc:Ignorable="d"
        Title="Výdejní displej"
        Height="500"
        Width="900"
        Background="#0f172a"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <local:OrderItemSummaryConverter x:Key="OrderItemSummaryConverter" />
    </Window.Resources>
    <Grid Background="#0f172a">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Background="#111827" Padding="12" BorderBrush="#1f2937" BorderThickness="0 0 0 1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Výdejní displej" Foreground="White" FontSize="20" FontWeight="SemiBold" />
                <TextBlock Text="Objednávky k předání"
                           Foreground="#9ca3af"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0" />
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" Margin="12" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding ReadyOrders}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel ItemWidth="280" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="260" Padding="12" Background="#0b1220" CornerRadius="10" BorderBrush="#1f2937" BorderThickness="1" Margin="8">
                            <StackPanel>
                                <TextBlock Text="{Binding DisplayCode}" Foreground="White" FontSize="24" FontWeight="Bold" />
                                <TextBlock Text="{Binding CreatedAt, StringFormat={}{0:HH:mm}}" Foreground="#9ca3af" Margin="0,4,0,6" />
                                <ItemsControl ItemsSource="{Binding Items}" Margin="0,4,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="0,4,0,0">
                                                <TextBlock Text="{Binding Path=., Converter={StaticResource OrderItemSummaryConverter}}" Foreground="#e5e7eb">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextDecorations" Value="{x:Null}" />
                                                            <Setter Property="Foreground" Value="#e5e7eb" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsFullyDonePickup}" Value="True">
                                                                    <Setter Property="TextDecorations" Value="Strikethrough" />
                                                                    <Setter Property="Foreground" Value="#6b7280" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <ItemsControl ItemsSource="{Binding PortionStatesPickup}" Margin="0,4,0,0">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <CheckBox IsChecked="{Binding IsDone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                      Padding="4,2"
                                                                      Margin="0,2,6,2"
                                                                      Background="#0b1220"
                                                                      Foreground="White"
                                                                      BorderBrush="#1f2937"
                                                                      Focusable="False" />
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <Button Content="Vydáno"
                                            Tag="{Binding}"
                                            Click="MarkServed_Click"
                                            Padding="10,6"
                                            Background="#22c55e"
                                            Foreground="White"
                                            BorderBrush="#16a34a" />
                                    <Button Content="Zpět do kuchyně"
                                            Tag="{Binding}"
                                            Click="Reopen_Click"
                                            Padding="10,6"
                                            Background="#374151"
                                            Foreground="White"
                                            BorderBrush="#4b5563"
                                            Margin="8,0,0,0" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
